                                        <option>$500,000</option>
                                        <option>$750,000</option>
                                        <option>$1,000,000+</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label for="bedrooms" class="form-label">Beds</label>
                                    <select class="form-select" id="bedrooms">
                                        <option selected>Any</option>
                                        <option>1+</option>
                                        <option>2+</option>
                                        <option>3+</option>
