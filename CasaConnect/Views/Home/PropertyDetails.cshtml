@model CasaConnect.Models.Property
@using System.Security.Claims

@{
    ViewData["Title"] = Model.Title;
    var currentUserId = User.FindFirst("UserId")?.Value;
    var isCurrentUserOwner = currentUserId != null && currentUserId == Model.Owner.Id.ToString();
}

<div class="container">
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            @if (Model.Images != null && Model.Images.Any())
            {
                <div id="propertyCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Model.Images[i].ImagePath" class="d-block w-100" alt="Property image" style="height: 400px; object-fit: cover;">
                            </div>
                        }
                    </div>
                    @if (Model.Images.Count > 1)
                    {
                        <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    }
                </div>
            }

            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="card-title h2 mb-3">@Model.Title</h1>
                    <h2 class="h3 text-primary mb-4">@Model.Price.ToString("C0")</h2>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="h5">@Model.Bedrooms</div>
                                <div class="text-muted">Bedrooms</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="h5">@Model.Bathrooms</div>
                                <div class="text-muted">Bathrooms</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="h5">@Model.SquareFootage</div>
                                <div class="text-muted">Square Feet</div>
                            </div>
                        </div>
                    </div>

                    <h3 class="h5 mb-3">Description</h3>
                    <p class="mb-4">@Model.Description</p>

                    <h3 class="h5 mb-3">Property Details</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Property Type</dt>
                                <dd class="col-sm-8">@Model.PropertyType</dd>

                                <dt class="col-sm-4">Address</dt>
                                <dd class="col-sm-8">
                                    @Model.Address<br />
                                    @Model.City, @Model.State @Model.ZipCode
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Listed</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">Available</span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="mb-4">
                            <button id="favoriteButton"
                                    class="btn @(ViewBag.IsFavorited ? "btn-danger" : "btn-outline-danger") w-100"
                                    data-property-id="@Model.Id">
                                <i class="bi @(ViewBag.IsFavorited ? "bi-heart-fill" : "bi-heart")"></i>
                                <span>@(ViewBag.IsFavorited ? "Remove from Favorites" : "Add to Favorites")</span>
                            </button>
                        </div>
                    }

                    <h3 class="h5 mb-3">Contact Information</h3>
                    <p class="mb-2">
                        <strong>Owner:</strong> @Model.Owner.Email
                    </p>

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (!isCurrentUserOwner)
                        {
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h3 class="h5 mb-3">Contact Owner</h3>
                                    <form asp-controller="Messages" asp-action="StartConversation" method="post">
                                        <input type="hidden" name="propertyId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-primary w-100">Start Conversation</button>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <h5 class="text-primary">You Own This Property</h5>
                                    <p class="text-muted">This is your property listing. You can edit or manage it from your dashboard.</p>
                                    <a asp-controller="Properties" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary w-100">Edit Listing</a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="card mb-4">
                            <div class="card-body">
                                <h3 class="h5 mb-3">Contact Owner</h3>
                                <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100">Login to Contact Owner</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#favoriteButton').click(function () {
                var propertyId = $(this).data('property-id');
                var button = $(this);

                $.post('/Home/ToggleFavorite', { propertyId: propertyId }, function (response) {
                    if (response.isFavorited) {
                        button.removeClass('btn-outline-danger').addClass('btn-danger');
                        button.find('i').removeClass('bi-heart').addClass('bi-heart-fill');
                        button.find('span').text('Remove from Favorites');
                    } else {
                        button.removeClass('btn-danger').addClass('btn-outline-danger');
                        button.find('i').removeClass('bi-heart-fill').addClass('bi-heart');
                        button.find('span').text('Add to Favorites');
                    }
                });
            });
        });
    </script>
}