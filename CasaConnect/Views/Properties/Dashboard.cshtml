@* Views/Properties/Dashboard.cshtml *@
@model IEnumerable<CasaConnect.Models.Property>

@{
    ViewData["Title"] = "My Properties";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Properties</h1>
        <a asp-action="Create" class="btn btn-primary">Add New Property</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You haven't listed any properties yet. Click the "Add New Property" button to get started!
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        @if (item.Images.Any())
                        {
                            <img src="@item.Images.First(i => i.IsPrimary).ImagePath" class="card-img-top" alt="@item.Title">
                        }
                        else
                        {
                            <img src="/images/property-placeholder.jpg" class="card-img-top" alt="No image available">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Address</p>
                            <p class="card-text">
                                <small class="text-muted">
                                    @item.Bedrooms BD | @item.Bathrooms BA | @item.SquareFootage sq ft
                                </small>
                            </p>
                            <p class="card-text">
                                <strong>$@item.Price.ToString("N0")</strong>
                            </p>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                                <span class="badge @(item.IsAvailable ? "bg-success" : "bg-danger")">
                                    @(item.IsAvailable ? "Available" : "Not Available")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>