    <script>
        // Auto-hide alerts after 5 seconds with fade effect
        $('.alert').each(function () {
            const alert = $(this);
            setTimeout(function () {
                alert.fadeOut(500, function () {
                    $(this).alert('close');
                });
            }, 5000);
        });

        // Set active nav link
        $(document).ready(function () {
            const currentUrl = window.location.pathname;
            $('.nav-link').each(function () {
                const href = $(this).attr('href');
                if (href && currentUrl.includes(href) && href !== '/') {
                    $(this).addClass('active');
                } else if (currentUrl === '/' && href === '/') {
                    $(this).addClass('active');
                }
            });

            // Subtle scroll events
            $(window).scroll(function () {
                if ($(window).scrollTop() > 50) {
                    $('.navbar').addClass('py-2').removeClass('py-3');
                } else {
                    $('.navbar').removeClass('py-2').addClass('py-3');
                }
            });
        });

        // Set up SignalR connection and unread messages count
        @if (User.Identity.IsAuthenticated)
        {
            <text>
                $(document).ready(function () {
                    // Initialize SignalR
                    var connection = new signalR.HubConnectionBuilder()
                        .withUrl("/messageHub")
                        .build();

                    // Start the connection
                    connection.start().catch(function (err) {
                        console.error(err.toString());
                    });

                    // Function to update unread count
                    function updateUnreadCount() {
                        $.get('/Messages/GetUnreadCount')
                            .done(function (response) {
                                if (response.success) {
                                    updateUnreadBadge(response.count);
                                }
                            })
                            .fail(function (error) {
                                console.error('Error fetching unread count:', error);
                            });
                    }

                    // Add the shared handler
                    connection.on("UnreadCountUpdated", function (count) {
                        updateUnreadBadge(count);
                    });

                    // Add the shared helper function
                    function updateUnreadBadge(count) {
                        if (count > 0) {
                            $('#unreadCount').text(count);
                            $('#unreadBadge').removeClass('d-none');
                        } else {
                            $('#unreadBadge').addClass('d-none');
                        }
                    }

                    // Update unread count on page load
                    updateUnreadCount();

                    // Listen for new messages
                    connection.on("ReceiveMessage", function (message) {
                        updateUnreadCount();
                    });

                    // Update count every minute
                    setInterval(updateUnreadCount, 60000);
                });
            </text>
        }
    </script>
